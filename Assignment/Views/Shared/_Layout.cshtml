@{
    var theme = Context.Request.Cookies["theme"] ?? "light";
    var isDarkMode = (theme == "dark") ? true : false;
}



<!DOCTYPE html>
<html lang="en" class="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment</title>
    <script src=" https://kit.fontawesome.com/a041cc045c.js" asp-append-version="true" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>
    <div class="wrapper">
        <partial name="~/Views/Partials/_Header.cshtml" />

        <main>
            @RenderBody()
        </main>


        <partial name="~/Views/Partials/_Footer.cshtml" />

    </div>
   
 
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_CookieConsent"/>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
